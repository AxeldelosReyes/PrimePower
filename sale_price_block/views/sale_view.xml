<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_available_reserved_qty_sale_order_line_view" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
			<xpath
				expr="//notebook/page/field[@name='order_line']/tree/field[@name='qty_delivered']"
				position="before">
				<field name="qty_available"/>
				<field name="reserved_product_qty" />
			</xpath>
	</field>
    </record>

	<record id="add_stock_location_id_sale_view" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">

			<xpath expr="//field[@name='warehouse_id']" position="after">
				<field name="stock_location_id"/>
			</xpath>

	<xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
    	<field name="stock_location_id" invisible="1"/>
		<field name="is_price_editable" />
	</xpath>
	<xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
		<attribute name="readonly"></attribute>
		<attribute name="attrs">{"readonly": ["|",["qty_invoiced","&gt;",0],["is_price_editable","=",False]]}</attribute>
  </xpath>

	</field>
	</record>
</odoo>