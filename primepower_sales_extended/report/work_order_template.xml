<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_workorder_document">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                <div class="page">
                    <p><strong>HC Work Order</strong></p>
                    <div class="oe_structure"/>
                    
                    <div class="mb32 row" id="wo_information">
                        <div class="col-xs-6">
                            <t t-set="partidas" t-value="len(doc.order_line)"/>
                            <div class="row">
                                <strong class="col-xs-6">No. Pedido:</strong>
                                <span class="col-xs-6" t-field="doc.name"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Cliente:</strong>
                                <span class="col-xs-6" t-field="doc.partner_id.name"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Comercial:</strong>
                                <span class="col-xs-6" t-field="doc.user_id.name"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Oportunidad:</strong>
                                <span class="col-xs-6" t-field="doc.opportunity_id.name"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">No. Partidas:</strong>
                                <span class="col-xs-6" t-esc="partidas"/>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="row">
                                <strong class="col-xs-6">Fecha Confirmacion:</strong>
                                <span class="col-xs-6" t-field="doc.confirmation_date"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Flete:</strong>
                                <span class="col-xs-6" t-field="doc.carrier_id.name"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Direccion Entrega:</strong>
                                <span t-field="doc.partner_shipping_id.city"/> | <span t-field="doc.partner_shipping_id.state_id.name"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Orden de Compra:</strong>
                                <span class="col-xs-6" t-field="doc.origin"/>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6">Almacen:</strong>
                                <span class="col-xs-6" t-esc="doc.warehouse_id.name"/>
                            </div>
                        </div>
                    </div> 
                    <t t-set="partida" t-value="0"/>                   
                    <table t-foreach="doc.order_line" t-as="line" class="table">
                        <t t-set="partida" t-value="partida+1"/>
                        <thead>
                            <tr>
                                <th>Partida</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Fecha Entrega</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-esc="partida"/></td>
                                <th><span t-field="line.product_id.display_name"/></th>
                                <td><span t-field="line.product_uom_qty"/></td>
                                <td><span t-field="line.customer_lead"/></td>
                            </tr>
                            <t t-if="line.product_values_ids">
                                <tr>
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th>Plantilla Baterias</th>
                                        <th>Valores</th>
                                        <th>Numero de Serie</th>
                                    </tr>
                                    </thead>
                                    <tr t-foreach="line.product_values_ids" t-as="values">
                                        <td style="background-color:#ffffff"/>
                                        <td class="text-right"><span t-field="values.name"/></td>
                                        <td class="text-left"><span t-field="values.valor"/></td>
                                        <td style="background-color:#ffffff"/>
                                    </tr>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
    
